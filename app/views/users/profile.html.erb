
<div class="row bg-design">

	<% unless flash[:notice].nil? %>
		<div class="alert"><%= flash[:notice] %></div>
	<% end %>
  <div class="span3"></div>
	<div class="span6">
		<div class="form_container">
			<%= form_for @user , :url  => user_update_path, :method => :put , :class => 'form_horizontal span5' do |f| %>

			  <div class="control-group">
	   			<%= f.label :name ,"Name*" , :class=> 'control-label'%>
	    		<div class="controls">
	    			<%= f.text_field :name,:class=> 'input' %>
	    		</div>
	  		</div>

			  <div class="control-group">
	   			<%= f.label :password , :class=> 'control-label'%>
	    		<div class="controls">
	    			<%= f.password_field :password,:class=> 'password' %>
	    		</div>
	  		</div>

			  <div class="control-group">
	   			<%= f.label :password_confirmation , :class=> 'control-label'%>
	    		<div class="controls">
	    			<%= f.password_field :password_confirmation,:class=> 'password' %>
	    		</div>
	  		</div>

			  <div class="control-group">

	   			<%= f.label :color , :class=> 'control-label'%>
	    		<div class="controls">
	    			<div class="input-append color" data-color="<%=@user.color%>" data-color-format="rgb" id="cp3">
		                <!-- <input type="text" class="span3" value="" readonly >
		                <span class="add-on"><i style="background-color: rgb(0, 0, 0)"></i></span>
		             -->
	    			<%= f.text_field :color ,:class=> 'input', :readonly => true %>
	    			<span class="add-on"><i style="background-color:<%=@user.color%>"></i></span>
	    			</div>
	    		</div>
	  		</div>

			  <div class="control-group">
	   			<%= f.label :gender , :class=> 'control-label'%>
	    		<div class="controls">
	    			<%= f.select :gender ,options_for_select(['Male','Female']) , :class=> 'input' %>
	    		</div>
	  		</div>


			  <div class="control-group">
	   			<%= f.label :contact_no, :class=> 'control-label'%>
	    		<div class="controls">
	    			<%= f.text_field :contact_no ,:class=> 'input', :pattern => "[0-9]{10,13}" %>
	    		</div>
	  		</div>


			  <div class="control-group">

	    		<div class="controls">
	    			<%= f.submit 'Update Settings' ,:class => "btn btn-primary " %>
	    		</div>
	  		</div>

			<% end %>
		</div>	
		 <div class="span3"></div>
	</div>

</div>